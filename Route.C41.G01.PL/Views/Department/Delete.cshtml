@model Department
@{
    ViewData["Title"] = "Delete Department";
}

<h1>Are yout Sure to Delete this Department</h1>

<form asp-action="Delete">
    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input asp-for="Code" class="form-control" readonly />

    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" readonly />

    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="DateOfeCreation"></label>
        <input asp-for="DateOfeCreation" class="form-control" readonly />
    </div>

    <input type="submit" value="Delete" class="btn btn-danger"/> |
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
